<?xml version="1.0" encoding="utf-8"?>
<core:customfield
        xmlns="urn:x-ns:hotjazz:jirarpc"
        xmlns:hotjazz="urn:x-ns:hotjazz"
        hotjazz:type="model"
        xmlns:core="urn:x-ns:hotjazz:jirarpc">
    <core:name hotjazz:type="CharField">change_type</core:name>
    <core:jira_name hotjazz:type="CharField">customfield_10272</core:jira_name>
    <core:type hotjazz:type="CharField">drop</core:type>
    <core:default hotjazz:type="CharField">Managed</core:default>
    <core:choices hotjazz:type="CharField">None|Standard (BAU)|Managed|Change Advisory Board (CAB)|Emergency</core:choices>
    <core:helptext hotjazz:type="CharField"><![CDATA[Standard (BAU) - business as usual; low impact with no risk to the infrastructure or service
<br/>Managed - Change team will review and set the required Change Type (default selection)
<br/>CAB (Change Advisory Board) - change could result in a service outage; further communication required
<br/>Emergency - bug fixes, incident resolutions and retrospective work]]></core:helptext>
    <core:order hotjazz:type="SmallIntegerField">90</core:order>
</core:customfield>
